                android:layout_height="@dimen/_28sdp"
                android:gravity="center"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="Overall"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_ldr_lms_own"
