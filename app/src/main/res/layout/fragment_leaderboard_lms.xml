                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/curve_border_bg_lead">

                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/_10sdp"
